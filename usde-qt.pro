##################################################
#### Translations
##################################################

# for lrelease/lupdate
# also add new translations to src/qt/bitcoin.qrc under translations/
# note: Setting translations like this when generating a VS project file
# generates an invalid project file, as it creates duplicate build instructions
!win32:TRANSLATIONS = $$files(src/qt/locale/bitcoin_*.ts)

isEmpty(QMAKE_LRELEASE) {
    win32:QMAKE_LRELEASE = $$[QT_INSTALL_BINS]\\lrelease.exe
    else:QMAKE_LRELEASE = $$[QT_INSTALL_BINS]/lrelease
}

#.qm locale file directory
isEmpty(QM_DIR):QM_DIR = $$PWD/src/qt/locale

# automatically build translations, so they can be included in resource file
TSQM.name = lrelease ${QMAKE_FILE_IN}
TSQM.output = $$QM_DIR/${QMAKE_FILE_BASE}.qm
TSQM.commands = $$QMAKE_LRELEASE ${QMAKE_FILE_IN} -qm ${QMAKE_FILE_OUT}
TSQM.CONFIG = no_link
QMAKE_EXTRA_COMPILERS += TSQM

#On windows, TRANSLATIONS isn't set, read above (line 306 as of writing) for explanation.
!win32:TSQM.input = TRANSLATIONS
win32:TSQM.input = $$files(src/qt/locale/bitcoin_*.ts);

